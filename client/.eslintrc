{
  "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended",  "plugin:react-hooks/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    // "linebreak-style": ["error", "unix"],
    // "react-hooks/rules-of-hooks": "warn",
    // "no-unused-vars":"off"
    "react-hooks/exhaustive-deps": "off",
    "react/display-name": "off"
  }
}